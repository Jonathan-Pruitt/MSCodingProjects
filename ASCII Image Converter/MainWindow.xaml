<Window x:Class="ASCII_Dreaming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASCII_Dreaming"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Button Name="uploadBtn" Content="Upload Image" HorizontalAlignment="Left" Margin="62,195,0,0" VerticalAlignment="Top" Click="uploadBtn_Click"/>
        <Image Name="previewImg" HorizontalAlignment="Left" Height="150" Width="150" Margin="25,25,0,0" VerticalAlignment="Top"/>
        <Label Name="outputLbl" Content="ASCII-DREAMING" HorizontalAlignment="Left" Margin="200,25,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono"/>
        <Button Name="convertBtn" Content="Convert Image" HorizontalAlignment="Left" Margin="62,519,0,0" VerticalAlignment="Top" Click="convertBtn_Click" Background="#FFDAC1E8" BorderBrush="#FF826C3F" Foreground="#FF6D6B08"/>
        <Button Name="saveBtn" Content="Save To File" HorizontalAlignment="Left" Margin="70,726,0,0" VerticalAlignment="Top" Visibility="Hidden" Click="saveBtn_Click"/>


    </Grid>
</Window>
